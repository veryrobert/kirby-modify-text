{
    "name": "estd/kirby-modify-text",
    "description": "A plugin to add custom attributes (e.g., styles, classes) to Kirby CMS writer blocks.",
    "version": "1.0.0",
    "type": "kirby-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Farrelly",
            "email": "robert@estd.dev",
            "homepage": "https://github.com/veryrobert/kirby-modify-text"
        }
    ],
    "require": {
        "php": ">=8.2",
        "getkirby/composer-installer": "^1.2"
    },
    "extra": {
        "kirby-plugin-root": "site/plugins/kirby-modify-text"
    },
    "config": {
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
